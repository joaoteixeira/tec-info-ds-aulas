        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Versão do aplicativo" Height="210" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Source="/Imagens/history.png" Height="110" Width="110"/>

        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Versão: 0.0.1" FontSize="16"/>
            <TextBlock Text="Desenvolvido por: João Teixeira" Margin="0 5 0 0" FontSize="16"/>
            <TextBlock Text="Entre em contato" Margin="0 5 0 0" FontWeight="Bold" FontSize="16"/>
            <TextBlock Text="E-mail: joao.teixeira@ifro.edu.br" Margin="0 5 0 0" FontSize="16"/>
            <TextBlock Text="Fone: 69 99200-0001" Margin="0 5 0 0" FontSize="16"/>
        </StackPanel>
        
    </Grid>
</Window>
